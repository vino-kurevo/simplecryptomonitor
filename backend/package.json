{
  "name": "crypto-wallet-alert-backend",
  "version": "1.0.0",
  "type": "module",
  "description": "Multi-tenant SaaS backend for crypto wallet monitoring",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "worker": "tsx watch src/workers/monitoring.ts",
    "dispatcher": "tsx watch src/workers/dispatcher.ts",
    "worker:prod": "node dist/workers/monitoring.js",
    "dispatcher:prod": "node dist/workers/dispatcher.js"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.39.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "node-fetch": "^3.3.2",
    "stripe": "^14.9.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.6",
    "@types/node-fetch": "^2.6.13",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  }
}
